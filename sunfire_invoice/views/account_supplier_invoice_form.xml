<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- Account.invoice inherit form view -->
<record id="account_invoice_supplier_form_inherit" model="ir.ui.view">
    <field name="name">Account.invoice.inherit.view.form</field>
    <field name="model">account.invoice</field>
    <field name="inherit_id" ref="account.invoice_supplier_form"/>
    <field name="arch" type="xml">
        <!-- Add your xpath here -->
        <xpath expr="//field[@name='origin']" position="replace">
            <field name="origin" attrs="{'invisible': [('origin', '=', False)]}" string="PO Number"/>
        </xpath>
    </field>
</record>
</odoo>
